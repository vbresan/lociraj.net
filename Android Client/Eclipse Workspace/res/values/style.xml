<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ListCategoryFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/Black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dip</item> 
    </style>
    <style name="PlacemarkDescriptionFont" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/Black</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="CategoryLayout" parent="@android:style/Widget.ListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="CategoryTitleLayout" parent="@android:style/Widget.ListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">5dip</item>
    </style>    
</resources>
